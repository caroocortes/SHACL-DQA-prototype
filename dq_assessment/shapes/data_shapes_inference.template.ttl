{% macro consistency_deprecated_properties(properties_list, type_property) -%}
ex:DeprecatedPropertiesUsageShape
    a sh:NodeShape ;
    sh:targetClass rdf:Property ;
    sh:not [ 
        sh:in ( {{properties_list}}) ;
        sh:message "DeprecatedPropertiesUsage - Deprecated properties are being used in the dataset";
    ].
{%- endmacro %}