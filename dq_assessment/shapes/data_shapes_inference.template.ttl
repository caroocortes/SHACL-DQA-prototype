{% macro representational_conciseness_uris_parameters_classes() -%}
ex:URIsParametersClassShape
    a sh:NodeShape ;
    sh:targetClass rdfs:Class ;
    sh:message "URIsParametersClass - URIs shouldn't use parameters";
    sh:not[
        sh:pattern "\\?.+=.*" ;
    ]. 
{%- endmacro %}

{% macro representational_conciseness_uris_length_classes(max_length_value) -%}
ex:URIsLengthClassShape
    a sh:NodeShape ;
    sh:targetClass rdfs:Class ;
    sh:maxLength {{ max_length_value }} ;
    sh:message "URIsLengthClass - URIs should have a length of less than {{ max_length_value }}". 
{%- endmacro %}

