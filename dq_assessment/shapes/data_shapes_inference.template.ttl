{% macro understandability_uri_regex_compliance_classes(uri_regex_pattern) -%}
ex:URIRegexComplianceClassesShape
    a sh:NodeShape ;
    sh:entailment <https://www.w3.org/ns/entailment/RDFS>;
    sh:targetClass rdfs:Class ;
    sh:or (
        [ 
            sh:pattern "rdf|owl|dc|XMLSchema"; 
            sh:message "URIRegexComplianceClasses - The URI should match the regex pattern";
        ]
        [ 
            sh:pattern "{{uri_regex_pattern}}"; 
            sh:message "URIRegexComplianceClasses - The URI should match the regex pattern";
        ]
    ).
{%- endmacro %}

{% macro understandability_uri_regex_compliance_properties(uri_regex_pattern) -%}
