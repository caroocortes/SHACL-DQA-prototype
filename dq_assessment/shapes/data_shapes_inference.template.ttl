{% macro performance_hash_uris_classes() -%}
ex:UsageHashURIsClassesShape
    a sh:NodeShape ;
    sh:targetClass rdfs:Class ; 
    sh:message "UsageHashURIsClasses - It's is recommended the usage of slash URIs";
    sh:or (
        [ 
            sh:pattern "^[^#]*$" ; 
            sh:message "UsageHashURIsProperties - It is recommended the usage of slash URIs" ;
        ]
        [ 
            sh:pattern "rdf|owl|dc|XMLSchema|w3|vocab";
            sh:message "UsageHashURIsProperties - It is recommended the usage of slash URIs" ;
        ]
    ).
{%- endmacro %}

